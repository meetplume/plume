{
    "name": "Magazine Theme",
    "description": "A modern magazine-style layout with featured posts and grid-based design",
    "version": "1.0.0",
    "author": "Blog Author",
    "screenshot": "screenshot.png",
    "settings": {
        "primary_color": "#dc2626",
        "neutral_color": "slate",
        "heading_font": "Inter",
        "body_font": "Inter",
        "code_font": "JetBrains Mono",
        "dark_mode": "switcher",
        "layout": {
            "container_max_width": "1400px",
            "sidebar_enabled": true,
            "header_style": "magazine",
            "footer_style": "extended",
            "featured_posts_count": 3,
            "posts_per_row": 3
        }
    },
    "fields": [
        {
            "key": "accent_color",
            "type": "colorpicker",
            "label": "Accent Color",
            "helperText": "Secondary color used for highlights and accents",
            "cssVariable": "--magazine-accent-color",
            "default": "#f59e0b"
        },
        {
            "key": "layout_style",
            "type": "select",
            "label": "Layout Style",
            "helperText": "Choose the overall layout style for the magazine theme",
            "options": {
                "standard": "Standard Grid",
                "masonry": "Masonry Layout",
                "featured": "Featured Posts First"
            },
            "default": "standard"
        },
        {
            "key": "header_tagline",
            "type": "text",
            "label": "Header Tagline",
            "placeholder": "Your magazine tagline...",
            "helperText": "Displayed below the site title in the header",
            "maxLength": 100,
            "default": "Breaking news and stories"
        },
        {
            "key": "category_colors",
            "type": "palettecolorpicker",
            "label": "Category Badge Color",
            "helperText": "Color scheme for category badges",
            "colors": {
                "red": "Red",
                "blue": "Blue",
                "green": "Green",
                "purple": "Purple",
                "orange": "Orange"
            },
            "default": "red"
        },
        {
            "key": "content_font",
            "type": "fontpicker",
            "label": "Content Font",
            "helperText": "Font used for article content and excerpts",
            "default": "Inter"
        }
    ],
    "supports": {
        "dark_mode": true,
        "sidebar": true,
        "featured_posts": true,
        "post_grid": true,
        "custom_colors": true,
        "responsive_design": true,
        "hero_section": true,
        "newsletter_signup": true
    },
    "template_parts": [
        "header",
        "footer",
        "sidebar",
        "hero",
        "featured-posts",
        "post-grid",
        "newsletter"
    ]
}
